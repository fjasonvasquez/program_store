<section>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<%= bootstrap_form_tag url: password_resets_path,
														html: { class:'form-horizontal' } do |f| %>
		</div>
			<h3 class='text-center'>Forgot Your Password?</h3>
			<br>
			<p class="col-md-offset-3">Enter your email address and click the 'Reset Password' button
				a new link will be sent to you to reset your password.
			</p>
			<br>

			<div class='form-group'>
				<label for='email_address' class='control-label col-md-3'>Email Address</label>
				<div class='col-md-7'>
					<%= f.email_field :email, class: 'form-control', id: 'email_address', hide_label: true %>
				</div>
			</div>

			<div class='form-group actions control-group'>
				<div class='col-md-offset-3'>
					<%= f.submit "Reset Password", class: 'btn btn-primary' %>
				</div>
			</div>
	</div>
</section>